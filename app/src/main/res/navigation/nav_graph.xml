<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/a">

    <fragment
        android:id="@+id/a"
        android:name="ru.aston.aston_intensive_4_1.A"
        android:label="Fragment A"
        tools:layout="@layout/fragment_a">
        <action
            android:id="@+id/action_a_to_b"
            app:destination="@id/b" />
    </fragment>

    <fragment
        android:id="@+id/b"
        android:name="ru.aston.aston_intensive_4_1.B"
        android:label="Fragment B"
        tools:layout="@layout/fragment_b">
        <action
            android:id="@+id/action_b_to_c"
            app:destination="@id/c">
            <argument
                android:name="message"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_b_to_a"
            app:destination="@id/a" />
    </fragment>

    <fragment
        android:id="@+id/c"
        android:name="ru.aston.aston_intensive_4_1.C"
        android:label="Fragment C"
        tools:layout="@layout/fragment_c">
        <action
            android:id="@+id/action_c_to_d"
            app:destination="@id/d" />
        <action
            android:id="@+id/action_c_to_a"
            app:destination="@id/a" />
    </fragment>

    <fragment
        android:id="@+id/d"
        android:name="ru.aston.aston_intensive_4_1.D"
        android:label="Fragment D"
        tools:layout="@layout/fragment_d">
        <action
            android:id="@+id/action_d_to_b"
            app:destination="@id/b" />
    </fragment>
</navigation>
